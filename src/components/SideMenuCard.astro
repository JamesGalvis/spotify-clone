---
import { playlists, type Playlist } from '@/lib/data'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, title, cover, artists } = playlist

const artistsString = artists.join(', ')
---

<a
  href={`/playlist/${id}`}
  class="playlist-item relative flex items-center gap-5 p-2 rounded- overflow-hidden rounded-md hover:bg-[#1a1a1a]"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-col flex-auto truncate">
    <h4 class="text-white">{title}</h4>
    <span class="text-sm">{artistsString}</span>
  </div>
</a>
